<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="32dp"
    tools:context=".view.animate.AnimateActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_cat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cat_square"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="8dp" />

    <com.yukaida.exampleapplication.view.animate.CircleAnimateView
        android:id="@+id/circleAnimateView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cat_square"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yukaida.exampleapplication.view.customView.CustomCameraAnimatorView
        android:id="@+id/customCameraAnimatorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>